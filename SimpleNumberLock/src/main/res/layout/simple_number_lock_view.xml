<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/PureWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/input_state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/num_margin"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/large_text_size"/>

    <TableLayout
        android:id="@+id/input_layout"
        android:layout_below="@id/input_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/num_line_1"
            android:layout_below="@id/input_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/num_1"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="1"/>

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/num_2"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="2"/>

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/num_3"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="3"/>

        </TableRow>

        <TableRow
            android:id="@+id/num_line_2"
            android:layout_below="@id/num_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/num_4"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="4"/>

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/num_5"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="5"/>

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/num_6"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="6"/>

        </TableRow>

        <TableRow
            android:id="@+id/num_line_3"
            android:layout_below="@id/num_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/num_7"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="7"/>

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/num_8"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="8"/>

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/num_9"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="9"/>

        </TableRow>

        <TableRow
            android:id="@+id/num_line_4"
            android:layout_below="@id/num_line_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/delete_one"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="C"/>

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/num_0"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="0"/>

            <TextView
                android:background="@drawable/num_back_selector"
                android:id="@+id/clear_all"
                android:layout_margin="@dimen/num_margin"
                android:layout_width="@dimen/num_size"
                android:layout_height="@dimen/num_size"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:layout_alignParentLeft="true"
                android:text="AC"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>
